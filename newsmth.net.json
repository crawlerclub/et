{
  "name": "article",
  "example_url": "http://www.newsmth.net/nForum/article/Universal/1429291",
  "default_fields": true,
  "rules": {
    "root": [
      {
        "type": "url",
        "key": "article",
        "xpath": "//div[@class='t-pre']//li/a/@href",
        "re": "",
        "js": ""
      },
      {
        "type": "dom",
        "key": "posts",
        "xpath": "//table[contains(concat(' ', @class, ' '), ' article ')]",
        "re": "",
        "js": ""
      }
    ],
    "posts": [
      {
        "type": "html",
        "key": "content",
        "xpath": ".//td[contains(concat(' ', @class, ' '), ' a-content ')]",
        "re": "",
        "js": ""
      },
      {
        "type": "text",
        "key": "floor",
        "xpath": ".//span[contains(@class, 'a-pos')]",
        "re": "(\\d+|妤间富)",
        "js": "function process(s){if(s=='妤间富') return '0'; return s;}"
      }
    ]
  },
  "js": ""
}
